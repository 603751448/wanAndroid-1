    text-align: center;
    display: block;
    margin: 10rpx 0rpx;
  }

  .heart-img{
    width: 50rpx;
    height: 50rpx;
  }

  .time-img{
    width: 50rpx;
    height: 50rpx;
    margin-left: 20rpx;
    margin-right: 10rpx;
  }

  .blog-time{
    color: rgba(37, 32, 32, 0.801);
    font-size: 14px;
  }

  .new-flag{
