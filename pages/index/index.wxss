
.slider,
.slider swiper,
.slider image{
  width: 100%;
  height: 390rpx;
}

.swiper-info{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10rpx 10rpx;
  background-color: rgba(121, 114, 114, 0.884);
  font-size: 16px;
  color: white;
}

.swiper-index{
  position: absolute;
  right: 0;
  margin-right: 40rpx;
  }
  
  .top-info{
    font-size: 8 px;
    color: rgba(37, 32, 32, 0.699);
    position: relative;
  }

  .blog-desc{
    color: blue;
    position: absolute;
    right: 0;
    margin-right: 40rpx;
    font-size: 12px;
  }

  .top-info image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
  }

  .blog-title{
    font-size: 12px;
  }

  .text-mid{
    color: rgba(37, 32, 32, 0.801);
